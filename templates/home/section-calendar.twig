<section class="home-calendar background" style="background-image: url({{post.get_field('calendar_bg')}})">
	<div class="container">
		{{siteMacros.titleSection( post.get_field('calendar_title'), 'home-calendar__title' )}}
		<p class="section__subtitle">{{post.get_field('calendar_subtitle')}}</p>
		{#{function('do_shortcode', '[ecs-list-events design="calendar"]')}#}
		<div id="calendar"></div>
		<script src="{{theme.link}}/static/build/js/moment.min.js"></script>
		
		<script src="{{theme.link}}/static/build/js/fullcalendar.min.js"></script>
		<script src="{{theme.link}}/static/build/js/ru.js"></script>
		<link rel="stylesheet" href="{{theme.link}}/static/build/css/fullcalendar.css">

		

		<script>
			jQuery(document).ready(function($){
				$('#calendar').fullCalendar({
					schedulerLicenseKey : 'GPL-My-Project-Is-Open-Source',
					locale: 'ru',
					events: {{calendar_events}},
					buttonText: {
						today:    'сегодня',
						month:    'месяц',
						week:     'неделя',
						day:      'день',
						list:     'список'
					}
				});
			});
		</script>
	</div>
</section>