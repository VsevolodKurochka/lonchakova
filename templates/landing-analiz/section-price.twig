<section class="section format">
	<div class="container">
		{{siteMacros.titleSection( post.get_field('price_format_title'), 'format__title' )}}
		<div class="format__table">
			<div class="format__table-column format__table-column_1">
				<p class="format__table-column-title format__table-column-title_large">Анализ гардероба</p>
				<div class="format__table-body">
					<ul class="format__table-column-list">
						{% for li in post.get_field('price_analiz') %}
							<li>{{li.name}}</li>
						{% endfor %}
					</ul>
				</div>
				<div class="format__table-footer">
					<div class="format__table-footer-item">
						<p>Продолжительность</p>
					</div>
					<div class="format__table-footer-item">
						<p>Стоимость услуги</p>
					</div>
				</div>
			</div>
			<div class="format__table-column format__table-column_2">
				<p class="format__table-column-title format__table-column-title_1">Оптимальный</p>
				<div class="format__table-body">
					<ul class="format__table-column-list">
						{% for li in post.get_field('price_analiz') %}
							<li>
								<span class='format__table-column-list-check {{li.status_optimal ? "format__table-column-list-check_#{li.status_optimal}" : ''}}'></span>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="format__table-footer">
					<div class="format__table-footer-item">
						<p>{{post.get_field('time_optimal')}}</p>
					</div>
					<div class="format__table-footer-item">
						<p>{{post.get_field('price_optimal')}}</p>
					</div>
				</div>
			</div>
			<div class="format__table-column format__table-column_3">
				<p class="format__table-column-title format__table-column-title_1">Максимальный</p>
				<div class="format__table-body">
					<ul class="format__table-column-list">
						{% for li in post.get_field('price_analiz') %}
							<li>
								<span class='format__table-column-list-check {{li.status_max ? "format__table-column-list-check_#{li.status_max}" : ''}}'></span>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="format__table-footer">
					<div class="format__table-footer-item">
						<p>{{post.get_field('time_maximal')}}</p>
					</div>
					<div class="format__table-footer-item">
						<p>{{post.get_field('price_maximal')}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>